{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "__sapper__/*",
        "public/*"
    ],
    "compilerOptions": {
        "module": "ESNext",
        "sourceMap": true,
        "inlineSources": true,
        "lib": [
            "es2020",
            "dom",
        ],
        "allowJs": true,
        "types": [
            "svelte",
            "svelte/store",
            "svelte/motion",
            "svelte/transition",
            "svelte/animate",
            "svelte/easing",
        ],
        "esModuleInterop": true,
        "preserveSymlinks": true,
        "moduleResolution": "node",
    }
}
